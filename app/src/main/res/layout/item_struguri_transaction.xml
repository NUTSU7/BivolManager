<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/material_dynamic_primary30"
    app:cardCornerRadius="17dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/struguriTranListImgView"
            android:layout_width="50dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/struguriTranListImgView2"
            app:layout_constraintRight_toLeftOf="@+id/struguriTranListTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="5dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_struguri_white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/struguriTranListTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/struguriTranListImgView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/struguriTranListTextView2"
            app:layout_constraintStart_toEndOf="@id/struguriTranListImgView"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/struguriTranListImgView2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/struguriTranListImgView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/struguriTranListTextView2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_person_icon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/struguriTranListTextView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/struguriTranListImgView2"
            app:layout_constraintTop_toBottomOf="@+id/struguriTranListTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/struguriTranDeleteBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/struguriTranListTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="20dp"
            android:src="@drawable/ic_angajat_delete"
            android:background="@null">

        </ImageButton>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>