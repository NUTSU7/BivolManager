<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/material_dynamic_primary30"
    app:cardCornerRadius="17dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/struguriTranListImgView"
            android:layout_width="50dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="5dp"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/ic_struguri_white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/struguriTranListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/struguriTranListImgView"
            app:layout_constraintRight_toLeftOf="@id/struguriTranDeleteBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/struguriTranListImgView"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/struguriTranDeleteBtn"
            android:layout_width="50dp"
            android:layout_height="70dp"
            app:layout_constraintLeft_toRightOf="@id/struguriTranListTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_angajat_delete"
            android:background="@null">

        </ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>